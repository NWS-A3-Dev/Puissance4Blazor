@page "/jeu"
@using AppliBlazor.Shared

<h3>Jeu</h3>

<table>
    <thead>
    <tr>
        <th>
            
        </th>
    </tr>
    </thead>
    <tbody>
    
    @{
        int count = 0;
    }

    @foreach (Couleur[] row in Game.Board)
    {
        int c2 = 0;
        <tr>
            @foreach(Couleur c in row)
            {
                int temp = c2;
                <td style="border: 1px solid black;background:@GetColorCss(c);" width="50px" height="50px"
                    @onclick="() => Game.Put(temp)">
                </td>
                ++c2;
            }
        </tr>
        ++count;
    }
    </tbody>
</table>


@code
{
    private Game Game = new Game();

    public string GetColorCss(Couleur c)
    {
        if (c == Couleur.Jaune)
            return ("yellow");
        if (c == Couleur.Rouge)
            return ("red");
        return ("white");
    }

    public void Test(int x)
    {
        Game.Put(x);
    }

    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }

}
